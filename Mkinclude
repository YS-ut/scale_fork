SYSDEP_DIR  = $(TOPDIR)/sysdep
endif

GTOOLDIR    = $(TOPDIR)/gtool
DCUTILSDIR  = $(TOPDIR)/dc_utils
SCALELIBDIR = $(TOPDIR)/scalelib

SCALELESDIR = $(TOPDIR)/scale-les
