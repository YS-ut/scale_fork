ifeq ($(origin BINDIR), undefined)
   BINDIR = $(TOPDIR)/bin/$(SCALE_SYS)
endif

ifeq ($(origin LIBDIR), undefined)
   LIBDIR = $(TOPDIR)/lib
endif

ifeq ($(origin MODDIR), undefined)
   MODDIR = $(TOPDIR)/include
endif

INITNAME    = scale-les_init
