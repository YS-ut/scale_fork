# ------ FOR MacOSX & ifort & MPICH2 -----
#

##### for computation

FC     = mpif90
FFLAGS = -fpp3 -O3 -ftz -xHost -ip               \
         -fp-model precise -pc 80             \
         -heap-arrays -fno-alias

FFLAGS_DEBUG = -fpp3 -O0 -check all -warn all -g -traceback -fpe0 -DDEBUG

CC     = mpicc
CFLAGS = -O3 -xHost -ip -ftz

LD     = $(FC)
LFLAGS = $(FFLAGS)

##### for frontend

NETCDF_LIBS = -lnetcdf
NETCDF_INCLUDES =

AR     = ar r
RANLIB = ranlib
