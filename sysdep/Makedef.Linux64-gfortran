##### for computation

FC     = mpif90
FFLAGS = -O3 -cpp


FFLAGS_DYN = $(FFLAGS)

CC     = mpicc
CFLAGS = -O3

LD     = $(FC)
LFLAGS = $(FFLAGS)

#FFLAGS_DEBUG = -cpp -O0 -g -fcheck=all -Wall -DDEBUG
FFLAGS_DEBUG = -cpp -O0 -g -fcheck=all -Wall -DDEBUG -ffpe-trap=invalid,overflow,zero -finit-real=nan

##### for frontend

NETCDF_LIBS = -lnetcdf
NETCDF_INCLUDE = 

AR     = ar r
