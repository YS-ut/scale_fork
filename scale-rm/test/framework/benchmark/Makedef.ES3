################################################################################
#
# ------ For Earth Simulator 3 -----
#
################################################################################

##### Fortran setting
#FFLAGS is set in Mkinclude. FFLAGS_DEBUG is used if SCALE_DEBUG=T

FC  = sxmpif90
SFC = frtpx
MODDIROPT = -to

FFLAGS_FAST  = -C hopt                    \
               -Ep -f2003 -dW             \
               -Wf"-L fmtlist transform"  \
               -Wf"-pvctl chgpwr fullmsg"

FFLAGS_DYN   = $(FFLAGS)

FFLAGS_DEBUG = -C vsafe                      \
               -Ep -f2003 -dW                \
               -Wf"-L fmtlist transform"     \
               -Wf"-pvctl fullmsg"           \
               -Wf"-init heap=nan stack=nan"



##### C setting
#CFLAGS is set in Mkinclude. CFLAGS_DEBUG is used if SCALE_DEBUG=T

CC = sxmpic++

CFLAGS_FAST  = -C vsafe
CFLAGS_DEBUG = $(CFLAGS_FAST)



##### Special setting

ifeq ($(SCALE_ENABLE_OPENMP),T)
	OMP = -P openmp
else
	OMP =
endif

### Performance monitor
# disable
#PERF_MONIT = -Nftrace
# enable
PERF_MONIT = -ftrace

FFLAGS_SYSDEPEND = $(OMP) $(PERF_MONIT) -DSX
CFLAGS_SYSDEPEND = $(OMP) $(PERF_MONIT) -DSX



##### Linker setting

LD      = $(FC)
LDFLAGS = $(FFLAGS)



################################################################################

###### NetCDF library
# Default settings
SCALE_NETCDF_INCLUDE ?= -I/SX/usr/include
SCALE_NETCDF_LIBS    ?= -L/SX/usr/lib0 -lnetcdf
# Or, please set environment variable
# example:
# export SCALE_NETCDF_INCLUDE="-I/SX/usr/include"
# export SCALE_NETCDF_LIBS="-L/SX/usr/lib0 -lnetcdf"

###### Math library
# Default settings
SCALE_MATHLIB_LIBS ?=
# Or, please set environment variable
# example:
# export SCALE_MATHLIB_LIBS="-L/SX/opt/mathkeisan/inst/lib0 -llapack -lblas"

##### for frontend
INSTALL = install
AR      = sxar
ARFLAGS = r
RANLIB  = touch
JOBSUB  = qsub
